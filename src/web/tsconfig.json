{
  "compilerOptions": {
    // ECMAScript Target and Library Configuration
    "target": "ES2020",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "es2020",
      "es2020.promise",
      "es2020.bigint",
      "es2020.string"
    ],

    // Module Resolution and Import Configuration
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,

    // Strict Type Checking
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    // Next.js Specific Configuration
    "jsx": "preserve",
    "noEmit": true,
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],

    // Path Aliases for Enhanced Developer Experience
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@components/*": ["./components/*"],
      "@lib/*": ["./lib/*"],
      "@hooks/*": ["./hooks/*"],
      "@config/*": ["./config/*"],
      "@types/*": ["./types/*"],
      "@styles/*": ["./styles/*"],
      "@utils/*": ["./utils/*"],
      "@services/*": ["./services/*"],
      "@contexts/*": ["./contexts/*"],
      "@constants/*": ["./constants/*"],
      "@layouts/*": ["./layouts/*"],
      "@features/*": ["./features/*"],
      "@api/*": ["./api/*"]
    }
  },

  // File Inclusion and Exclusion
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "**/*.json"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "out",
    "build",
    "coverage",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}